<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>

    <style name="GreenTextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>

    <style name="SecondaryTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>


    <style name="NormalTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>

    <style name="GreyTextView">
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>

    <style name="GreyMediumTextView">
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_light</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="android:layout_marginLeft">@dimen/large_padding</item>
    </style>
</resources>
